<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundTint="@color/teal_200"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/mainLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/mainQuoteInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="New pony to add"
            android:nextFocusDown="@+id/mainAddPony"/>

        <Button
            android:id="@+id/mainAddPony"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/addPony"
            android:onClick="addPony"/>

        <ListView
            android:id="@+id/mainQuoteList"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:backgroundTint="@color/black"/>
    </LinearLayout>

